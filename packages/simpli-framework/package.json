{
  "name": "simpli-docs",
  "version": "0.1.0",
  "description": "Production-ready documentation framework powered by React and Vite",
  "type": "module",
  "main": "./dist/core/index.js",
  "module": "./dist/core/index.js",
  "types": "./dist/core/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.js"
    },
    "./vite": {
      "types": "./dist/core/vite/index.d.ts",
      "import": "./dist/core/vite/index.js"
    },
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.js"
    },
    "./components": {
      "types": "./dist/theme/components/index.d.ts",
      "import": "./dist/theme/components/index.js"
    },
    "./styles.css": "./dist/theme/styles/index.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "simpli",
    "documentation",
    "framework",
    "react",
    "vite",
    "mdx",
    "static-site-generator",
    "docs",
    "production"
  ],
  "author": "Simpli Team",
  "license": "MIT",
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "vite": "^7.0.0"
  },
  "dependencies": {
    "@simpli/shared": "^0.1.0",
    "@mdx-js/react": "^3.1.1",
    "@mdx-js/rollup": "^3.1.1",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.563.0",
    "react-router": "^7.13.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "babel-plugin-react-compiler": "^1.0.0",
    "mdast-util-directive": "^3.1.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-directive": "^4.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.22.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vite": "^7.3.1",
    "vitest": "^3.0.0"
  },
  "scripts": {
    "build": "tsc -b && npm run copy-assets",
    "copy-assets": "node scripts/copy-assets.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/simpli-framework/simpli.git",
    "directory": "packages/simpli-framework"
  }
}
