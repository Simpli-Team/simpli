{
  "name": "simpli-framework-root",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Simpli Framework - Lightweight, blazing-fast documentation framework",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && npm run prerender",
    "build:packages": "npm run build:shared && npm run build:framework",
    "build:shared": "cd packages/shared && npm install && npm run build",
    "build:framework": "cd packages/simpli-framework && npm run build",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "prerender": "tsx scripts/prerender.ts",
    "cli": "node packages/simpli-cli/bin/simpli.js",
    "cli:dev": "npm run cli -- dev",
    "cli:build": "npm run cli -- build",
    "cli:serve": "npm run cli -- serve",
    "cli:clear": "npm run cli -- clear",
    "cli:doctor": "npm run cli -- doctor",
    "create": "node packages/create-simpli/bin/create-simpli.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:project": "node scripts/test-project.js",
    "test:manual": "echo 'Run: node packages/create-simpli/bin/create-simpli.js my-test-project'"
  },
  "dependencies": {
    "@mdx-js/react": "^3.1.1",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router": "^7.13.0",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@mdx-js/rollup": "^3.1.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^3.0.0",
    "@vitest/ui": "^3.0.0",
    "babel-plugin-react-compiler": "^1.0.0",
    "cac": "^6.7.14",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "kolorist": "^1.8.0",
    "mdast-util-directive": "^3.1.0",
    "prompts": "^2.4.2",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-directive": "^4.0.0",
    "remark-frontmatter": "^5.0.0",
    "remark-gfm": "^4.0.1",
    "shiki": "^3.22.0",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.55.0",
    "unist-util-visit": "^5.1.0",
    "vite": "^7.3.1",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
